# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=

# Clerk URLs (relative to the app domain/path context)
# These should match the paths where your Clerk components are hosted.
# E.g. if your login page is at /app/login
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/app/login
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/app/signup
# These are paths after sign-in/up, relative to the app's context root.
# '/dashboard' would typically resolve to something like /app/your-workspace-slug
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# Database - PostgreSQL
# Local development (with Docker Compose)
DATABASE_URL="postgresql://convoforms:convoforms_dev_password@localhost:5432/convoforms"
# Production (use your production PostgreSQL URL)
# DATABASE_URL="postgresql://username:password@host:port/database"

# Google AI (Gemini)
GOOGLE_AI_API_KEY=

# OpenAI (deprecated)
OPENAI_API_KEY=

# Stripe
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# Stripe Price IDs
STRIPE_PRO_PRICE_ID=
STRIPE_ENTERPRISE_PRICE_ID=

# Email (Resend)
RESEND_API_KEY=

# App URL
NEXT_PUBLIC_APP_URL=http://localhost:3002

# Domain Configuration
NEXT_PUBLIC_PROD_DOMAIN=convo.ai
PORT=3002

# Admin Dashboard Configuration
ADMIN_EMAILS="admin@example.com,anotheradmin@example.com" # Comma-separated list of admin emails

# Analytics (optional)
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com
